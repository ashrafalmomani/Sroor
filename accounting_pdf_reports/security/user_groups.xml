<odoo>
    <record id="module_accounting_category" model="ir.module.category">
        <field name="name">Accounting PDF Reports</field>
        <field name="sequence">20</field>
    </record>
    <record id="accounting_group_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_accounting_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>
    <record id="accounting_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_accounting_category"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
        <field name="implied_ids" eval="[(4, ref('accounting_group_user'))]"/>
    </record>


</odoo>